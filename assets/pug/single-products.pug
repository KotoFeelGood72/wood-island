	section.crossel
		.section_in 
			.crossel_main
				.crossel_head
					.section_title 
						h4 Смотрите также
					.crossel_nav 
						.crossel_nav_btn.prev_cross.btn 
							+icon('prev')
						.crossel_nav_btn.next_cross.btn 
							+icon('next')
				.crossel_slider_w 
					.crossel_slider.swiper 
						.swiper-wrapper
							-for(i = 0; i < 6; i++) 
								.swiper-slide 
									.crossel_slide 
										+products({
											news: false
										})

	

						